<div class="card login-card1" style="min-width: 100%;">
  <div class="tracker">
    <h2>My Progress</h2>
<div>
    <label for="staticEmail">Daily Weight:</label>
    <input type="text" id="tracker-weight" value=""/>
</div>
<div class="datecontainer">
  <div>
      <label>Weight Date:</label>
      <input type="text" class="datepicker-13" id="tracker-date" value=""/>
  </div>
  <button id="daily-tracker" type="button" class="btn btn-secondary btn-sm">Save</button>
</div>
<div class="report">
  <div class="report-table">
    <table class="table">
      <thead class="thead-dark">
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Weight</th>
        <th scope="col">Delete</th>
      </tr>
      </thead>
      {{#each progresses as |progress|}}
      <tr tracker_id="{{progress.id}}">
        <td>{{format_date progress.track_date}}</td>
        <td>{{progress.daily_weight}}</td>
        <td><img src="/image/delete.png" alt="delete icon" class="delete-icon"></td>
      </tr>
      {{/each}}
    </table>
  </div><div id="chartContainer"  class="report-graph"></div>
</div>
</div>
</div>

<script src="https://code.jscharting.com/2.9.0/jscharting.js"></script>
<script src="/js/tracker.js"></script>
<script src="/js/chart.js"></script>
