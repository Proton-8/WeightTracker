<div class>
  <div class="mb-3 row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Daily Weight:</label>
    <div class="col-sm-10">
      {{! need help to make password appear as *** only }}
      <input
        type="text"
        readonly
        class="form-control-plaintext"
        id="staticEmail"
        value="{{daily_weight}} lbs"
      />
    </div>
  </div>

  <div class="datecontainer">
    <div class="row">
      <label>Date:</label>
      <input
        type="text"
        class="datepicker-13"
        value="{{date}}"
      />
    </div>
  </div>
  <div class="report-table">
    <table>
      <tr>
        <th>Date</th>
        <th>Weight</th>
        <th>Edit</th>
      </tr>
      {{#each progresses as |progress|}}
      <tr tracker_id="{{progress.id}}">
        <td>{{format_date progress.track_date}}</td>
        <td>{{progress.daily_weight}}</td>
        <td>Edit</td>
      </tr>
      {{/each}}
    </table>
  </div>
</div>

<script src="/js/tracker.js"></script>