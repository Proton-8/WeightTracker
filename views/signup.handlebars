<div class="card login-card1" style="width: 25rem;">
 
 <div class="signup">
    <h2>User Sign-up</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Full Name:</label>
        <input class="form-input" type="text" id="name-signup" value=""/>
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input" type="text" id="email-signup"/>
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
       <div class="form-group">
        <label for="currentWeight-signup">Current Weight/lps :</label>
        <input class="form-input" type="number" id="currentWeight-signup" value="0" />
      </div>
      <div class="form-group">
        <label for="targetWeight-signup">Target Weight/lbs:</label>
        <input class="form-input" type="number" id="targetWeight-signup" value="0" />
      </div>
      <div class="form-group">
        <label for="targetWeight-signup">Start Date of the Program:</label>
        <input class="form-input" type="text" id="startDate-signup" value="{{date}}"/>
      </div>
      <div class="form-group">
        <label for="targetWeight-signup">End Date of the Program:</label>
        <input class="form-input" type="text" id="targetDate-signup" value="{{date}}"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

  <script src="./js/signup.js"></script>

  <script type="text/javascript">
    $(function() {
            $( "#startDate-signup").datepicker();
            $( "#startDate-signup").datepicker("show");
            $( "#targetDate-signup").datepicker();
            $( "#targetDate-signup").datepicker("show");
         });
</script>


